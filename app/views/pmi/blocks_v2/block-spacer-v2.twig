{% block spacer_v2 %}
{% if blocks[index].margin_sides is not defined or blocks[index].margin_sides == "0" or blocks[index].margin_sides == "" %}

                            <tr pik-mail-block="spacer" style="background-color:{{blocks[index].color_bkg}};">
                              <th valign="top" style="background-color:{{blocks[index].color_bkg}};text-align:left;font-size:1px;line-height:1px" class="horizontal-gutter" height="{{blocks[index].height}}">&nbsp;fffff</th>
                            </tr>
{% else %}
{% set widthCol = 100 - 2*blocks[index].margin_sides  %}

                            <tr pik-mail-block="spacer_v2" style="background-color:{{blocks[index].margin_color}};">
                              <th valign="middle" style="text-align:center" class="horizontal-grid">
                              <table valign="top" align=center cellpadding="0" cellspacing="0" border="0" width="100%" style="min-width:100%" role="presentation">
                                <tbody>
                                <tr>
                                  <th valign="top" style="color:black;font-size:12px;line-height:12px;background-color:{{blocks[index].margin_color}};" class="" width="{{blocks[index].margin_sides}}%" height="{{blocks[index].height}}">&nbsp;</th>
                                  <th valign="top" style="color:black;font-size:12px;line-height:12px;background-color:{{blocks[index].color_bkg}};"    class="" width="{{widthCol}}%"                   height="{{blocks[index].height}}">&nbsp;</th>
                                  <th valign="top" style="color:black;font-size:12px;line-height:12px;background-color:{{blocks[index].margin_color}};" class="" width="{{blocks[index].margin_sides}}%" height="{{blocks[index].height}}">&nbsp;</th>
                                </tr>
                                </tbody>
                              </table>
                              </th>
                            </tr>
{% endif %}
{% endblock %}



